<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkerColor"
    tools:context=".Activities.MemoHome">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:background="@color/purple_700"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow_white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEMO"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            app:cardUseCompatPadding="true"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/purple_500"
            app:cardCornerRadius="7dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="15dp"
                >

                <TextView
                    android:id="@+id/cName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="7dp"
                    android:textColor="@color/purple_200"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/cCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Code"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="7dp"
                    android:textColor="@color/purple_200"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/logVisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/purple_500"
            app:cardCornerRadius="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log A visit"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="7dp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                android:textSize="18sp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/createMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/purple_500"
            app:cardCornerRadius="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Memo"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="7dp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                android:textSize="18sp"
                />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/viewMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/purple_500"
            app:cardCornerRadius="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View My Memos"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="7dp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                android:textSize="18sp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/viewVisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/purple_500"
            app:cardCornerRadius="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View My Visits"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="7dp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                android:textSize="18sp"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>