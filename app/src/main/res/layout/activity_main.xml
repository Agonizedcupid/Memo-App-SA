<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkerColor"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:background="@color/purple_700"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/viewStockCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/purple_500"
            app:cardCornerRadius="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Stock Sheet"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="7dp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                android:textSize="18sp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/createMemoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/purple_500"
            app:cardCornerRadius="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create A Memo or Visit"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="7dp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                android:textSize="18sp"
                />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/collaborationPanelCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/purple_500"
            app:cardCornerRadius="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collaboration Panel"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="7dp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                android:textSize="18sp"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>